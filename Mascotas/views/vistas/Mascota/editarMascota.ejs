<h1>Editar Mascotas</h1>
<div class="row">
  <div class="col-sm-8">
    <form action="mascota/editarMascota" method="post">
      <div class="form-group">
        <label>Nombre</label>
        <input required type="text" class="form-control" placeholder="Ingrese el nombre" name="nombre"
               value="<%= mascota.nombre %>">
      </div>
      <div class="form-group">
        <label>Fecha Nacimiento</label>
        <input type="text" disabled class="form-control" placeholder="Ingrese la Fecha Nacimiento"
               name="fechaNacimiento" value="<%= mascota.fechaNacimiento.toLocaleString() %>">
      </div>
      <label for="">Raza</label>
      <select class="form-control" name="idRaza">
        <% for(var i = 0; i < razas.length; i++){ %>
        <option value='<%= razas[i].id %>'>
          <%= razas[i].nombre %>
        </option>
        <% } %>
      </select>
      <div class="form-group">
        <label>País de Nacimiento</label>
        <select class="form-control" name="paisNacimiento">
          <% if(mascota.paisNacimiento.isEqual("Colombia")){ %>
          ">
          <option value='Colombia'>Colombia</option>
          <option value='Chile'>Chile</option>
          <option value='Ecuador'>Ecuador</option>
          <option value='Peru'>Perú</option>
          <% } if(mascota.paisNacimiento.isEqual("Chile")){ %>
          <option value='Chile'>Chile</option>
          <option value='Colombia'>Colombia</option>
          <option value='Ecuador'>Ecuador</option>
          <option value='Peru'>Perú</option>
          <% } if(mascota.paisNacimiento.isEqual("Ecuador")){ %>
          <option value='Ecuador'>Ecuador</option>
          <option value='Chile'>Chile</option>
          <option value='Colombia'>Colombia</option>
          <option value='Peru'>Perú</option>
          <% } if(mascota.paisNacimiento.isEqual("Peru")){ %>
          <option value='Peru'>Perú</option>
          <option value='Chile'>Chile</option>
          <option value='Colombia'>Colombia</option>
          <option value='Ecuador'>Ecuador</option>
          <% } %>
        </select>
      </div>
      <input type="hidden" name="id" value="<%= mascota.id %>">
      <input type="hidden" name="idUsuario" value="<%= mascota.idUsuario %>">
      <input type="hidden" name="idUsuarios" value="<%= idUsuarios %>">
      <input type="hidden" name="idRazas" value="<%= idRazas %>">
      <button type="submit" class="btn btn-success">Editar Mascota</button>
    </form>
  </div>
  <div class="col-sm-4">
    <h3 class="text-center"> ID: <%= mascota.id %> - <%= mascota.nombre %></h3>
    <h4 class="text-center"> Fecha de Nacimiento: <%= mascota.fechaNacimiento.toLocaleString() %></h4>
    <p class="text-center">
      <%= mascota.paisNacimiento %>
    </p>
  </div>
</div>
</div>
